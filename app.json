{
  "expo": {
    "name": "bienestar-app",
    "slug": "bienestar-app",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "bienestarapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
       "package": "tu.package.id",
        "intentFilters": [
        {
          "action": "VIEW",
          "data": [{ "scheme": "bienestar" }],
          "category": ["BROWSABLE", "DEFAULT"]
        }
      ]
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",       
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Necesitamos acceder a tus fotos para subir tu avatar.",
          "cameraPermission": "Necesitamos usar la cámara para tomar tu foto de perfil."
        }
      ]
    ],
    "ios": {
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "Necesitamos acceder a tus fotos para subir tu avatar.",
        "NSCameraUsageDescription": "Necesitamos usar la cámara para tomar tu foto de perfil."
      }
    },
    "android": {
      "permissions": ["READ_MEDIA_IMAGES"]
    },
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}


